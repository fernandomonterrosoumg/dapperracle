                                <input type="text" v-model="pacienteEditado.NOMBRE" placeholder="Nombre">
                                <input type="number" v-model="pacienteEditado.EDAD" placeholder="Edad">
                            </div>
                        </div>
                    </div>

                    <!-- Pie del modal Bootstrap -->
